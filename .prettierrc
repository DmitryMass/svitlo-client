{
    "plugins": [
        "prettier-plugin-tailwindcss" 
    ],
    "importOrder": [
        "react",
        "<THIRD_PARTY_MODULES>",
        "^./(.*)$",
        "^../(.*)$",
        "@/*"
    ],
    "printWidth": 80,
    "trailingComma": "all",
    "importOrderSeparation":true,
    "importOrderSortSpecifiers":true,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "tailwindFunctions": ["clsx"],
    "tailwindPreserveWhitespace": false
}

